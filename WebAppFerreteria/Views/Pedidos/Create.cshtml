@model WebAppFerreteria.Models.Pedidos

@{
    ViewData["Title"] = "Create";
}


<style>
    body {
        background-color: #1D1D1D;
    }

    .form-container {
        background-color: #212121;
        padding: 40px;
        margin-top: 60px;
        margin-bottom: 60px;
        border-radius: 10px;
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
    }

    .page-title {
        font-size: 2rem;
        margin-bottom: 30px;
        font-weight: bold;
        text-align: center;
    }

    label {
        color: #ccc;
    }

    input.form-control {
        background-color: #2c2c2c;
        color: white;
        border: none;
        border-radius: 5px;
    }

        input.form-control:focus {
            box-shadow: 0 0 0 2px #fb8c00;
        }

    .btn-orange {
        background-color: #fb8c00 !important;
        color: white !important;
    }

        .btn-orange:hover {
            background-color: #ef6c00 !important;
        }

    .text-danger {
        color: #e57373 !important;
    }

    a {
        color: #fb8c00;
        display: inline-block;
        margin-top: 20px;
    }

    .btn-blue {
        background-color: #1976d2 !important;
        color: white !important;
    }

    input.select-dropdown {
        color: white;
    }
</style>

<div class="container form-container">
    <h4 class="page-title">Crear Pedido</h4>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Nombre de Cliente</label>
            <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
        </div>
        <div class="form-group">
            <label asp-for="Estado" class="control-label"></label>
            <input asp-for="Estado" class="form-control" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Dirección de Entrega</label>
            <input asp-for="DireccionEntrega" class="form-control" />
            <span asp-validation-for="DireccionEntrega" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Nombre Empleado</label>
            <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId"></select>
        </div>
        <div class="form-group mt-4">
            <input type="submit" value="Crear" class="btn btn-orange" />
        </div>
    </form>


    <a asp-action="Index" class="btn btn-blue">
        <i class="material-icons left">arrow_back</i>Volver
    </a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
