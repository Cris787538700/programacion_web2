@model IEnumerable<WebAppFerreteria.Models.Facturas>

@{
    ViewData["Title"] = "Lista de Facturas";
}

<style>
    body {
        background-color: #1D1D1D;
        color: white;
    }

    .container-factura {
        margin-top: 60px;
    }

    h1 {
        font-size: 2.2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-create {
        background-color: #43a047;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        margin-bottom: 20px;
        display: inline-block;
    }

    .btn-create:hover {
        background-color: #388e3c;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #2C2C2C;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 14px;
        text-align: left;
        border-bottom: 1px solid #444;
    }

    th {
        background-color: #333;
        color: #fb8c00;
    }

    tr:hover {
        background-color: #383838;
    }

    .action-links a {
        margin-right: 10px;
        color: white;
        text-decoration: none;
        font-weight: bold;
    }

    .action-links a:hover {
        text-decoration: underline;
    }

    .btn-orange {
        background-color: #fb8c00 !important;
    }

    .text-center {
        text-align: center;
    }
</style>

<div class="container container-factura">
    <h1>Lista de Facturas</h1>

    <p>
        <a asp-action="Create" class="btn btn-orange">
            <i class="material-icons left">add</i>Agregar Factura
        </a>
    </p>

    <table>
        <thead>
            <tr>
                <th>Fecha de la Factura</th>
                <th>Total</th>
                <th>Método de Pago</th>
                <th>Pedido</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FechaFactura)</td>
                    <td>@Html.DisplayFor(modelItem => item.Total)</td>
                    <td>@Html.DisplayFor(modelItem => item.MetodoPago)</td>
                    <td>@Html.DisplayFor(modelItem => item.Pedido.Id)</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.Id">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id">🔍 Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
