@model WebAppFerreteria.Models.Facturas

@{
    ViewData["Title"] = "Eliminar Factura";
}

<style>
    body {
        background-color: #1D1D1D;
    }

    .delete-container {
        background-color: #212121;
        padding: 40px;
        margin-top: 60px;
        margin-bottom: 60px;
        border-radius: 10px;
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
    }

    .page-title {
        font-size: 2rem;
        margin-bottom: 30px;
        font-weight: bold;
        text-align: center;
    }

    .sub-title {
        font-size: 1.2rem;
        margin-bottom: 25px;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #2C2C2C;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 14px;
        text-align: left;
        border-bottom: 1px solid #444;
    }

    th {
        background-color: #333;
        color: #fb8c00;
    }

    tr:hover {
        background-color: #383838;
    }

    .action-links a {
        margin-right: 10px;
        color: white;
        text-decoration: none;
        font-weight: bold;
    }

    .action-links a:hover {
        text-decoration: underline;
    }

    .btn-orange {
        background-color: #fb8c00 !important;
        color: white !important;
    }

    .btn-danger {
        background-color: #d32f2f !important;
        color: white !important;
    }

    .action-buttons {
        margin-top: 30px;
        display: flex;
        gap: 15px;
        justify-content: center;
    }
</style>

<div class="container delete-container">
    <h4 class="page-title">Eliminar Factura</h4>

    <div class="sub-title">¿Estás seguro de que deseas eliminar esta factura?</div>

    <table>
        <thead>
            <tr>
                <th>Campo</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Fecha de la Factura</td>
                <td>@Html.DisplayFor(model => model.FechaFactura)</td>
            </tr>
            <tr>
                <td>Total</td>
                <td>@Html.DisplayFor(model => model.Total)</td>
            </tr>
            <tr>
                <td>Método de Pago</td>
                <td>@Html.DisplayFor(model => model.MetodoPago)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Pedido)</td>
                <td>@Html.DisplayFor(model => model.Pedido.Id)</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="action-buttons">
            <button type="submit" class="btn btn-danger">
                <i class="material-icons left">delete</i>Eliminar
            </button>
            <a asp-action="Index" class="btn btn-orange">
                <i class="material-icons left">arrow_back</i>Volver
            </a>
        </div>
    </form>
</div>
