<div class="hero-section" style="background-color: #1D1D1D;">

    <div class="hero-overlay center-align">
        <h1 class="white-text"><u>PRODUCTOS</u></h1>
    </div>

    <!-- Vista Productos -->
    <div class="offers-banner" style="background:#e0e0e0;">
        <div class="container products-section">
            <div class="row"
                 style="display: flex; flex-wrap: wrap; align-items: stretch; margin-bottom: 0;">

                <!-- Caja de Herramientas -->
                <div class="col s12 m6 l3" style="display: flex; padding-bottom: 1rem;">
                    <div class="card hoverable" style="display: flex; flex-direction: column; flex: 1;">
                        <div class="card-image" style="flex-shrink: 0;">
                            <img src="@(Url.Content("~/Imagenes/caja_de_herramientas_card.png"))" alt="Caja de Herramientas">
                        </div>
                        <div class="card-content" style="flex: 1;">
                            <span class="card-title">Caja de Herramientas</span>
                            <p>Caja plástica resistente, perfecta para almacenar y organizar herramientas.</p>
                        </div>
                        <div class="card-action" style="margin-top: auto;">
                            <a asp-controller="Productos"
                               asp-action="Details"
                               asp-route-id="1"
                               class="btn grey lighten-2 black-text">Comprar</a>
                        </div>
                    </div>
                </div>

                <!-- Martillo -->
                <div class="col s12 m6 l3" style="display: flex; padding-bottom: 1rem;">
                    <div class="card hoverable" style="display: flex; flex-direction: column; flex: 1;">
                        <div class="card-image" style="flex-shrink: 0;">
                            <img src="@(Url.Content("~/Imagenes/martillo_card.png"))" alt="Martillo de Acero">
                        </div>
                        <div class="card-content" style="flex: 1;">
                            <span class="card-title">Martillo de Acero</span>
                            <p>Martillo de acero con mango ergonómico, ideal para trabajos generales.</p>
