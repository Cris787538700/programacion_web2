@model WebAppFerreteria.Models.DetallesPedido

@{
    ViewData["Title"] = "Detalle del Pedido";
}

<style>
    body {
        background-color: #1D1D1D;
    }

    .details-container {
        background-color: #212121;
        padding: 40px;
        margin-top: 60px;
        margin-bottom: 60px;
        border-radius: 10px;
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
    }

    .page-title {
        font-size: 2rem;
        margin-bottom: 30px;
        font-weight: bold;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #2C2C2C;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 14px;
        text-align: left;
        border-bottom: 1px solid #444;
    }

    th {
        background-color: #333;
        color: #fb8c00;
    }

    tr:hover {
        background-color: #383838;
    }

    .btn-orange {
        background-color: #fb8c00 !important;
        color: white !important;
    }

    .btn-warning {
        background-color: #f57c00 !important;
        color: white !important;
    }

    .action-buttons {
        margin-top: 30px;
        display: flex;
        gap: 15px;
        justify-content: center;
    }

    a {
        color: #fb8c00;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }
</style>

<div class="container details-container">
    <h4 class="page-title">Detalle del Pedido</h4>

    <table>
        <thead>
            <tr>
                <th>Campo</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Cantidad</td>
                <td>@Model.Cantidad</td>
            </tr>
            <tr>
                <td>Precio Unitario</td>
                <td>@Model.PrecioUnitario.ToString("C")</td>
            </tr>
            <tr>
                <td>Pedido</td>
                <td>@Model.Pedido?.Id</td>
            </tr>
            <tr>
                <td>Producto</td>
                <td>@Model.Producto?.Nombre</td>
            </tr>
            <tr>
                <td class="fw-bold">Total</td>
                <td class="fw-bold text-success">
                    @(Model.Cantidad * Model.PrecioUnitario)
                </td>
            </tr>
        </tbody>
    </table>

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            <i class="material-icons left">edit</i>Editar
        </a>
        <a asp-action="Index" class="btn btn-orange">
            <i class="material-icons left">arrow_back</i>Volver
        </a>
    </div>
</div>
