@model WebAppFerreteria.Models.Usuarios

@{
    ViewData["Title"] = "Crear Usuario";
}

<style>
    body {
        background-color: #1D1D1D;
    }

    .form-container {
        background-color: #212121;
        padding: 40px;
        margin-top: 60px;
        margin-bottom: 60px;
        border-radius: 10px;
        color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.6);
    }

    .form-title {
        font-size: 2rem;
        margin-bottom: 30px;
        font-weight: bold;
        text-align: center;
    }

    .form-group label {
        color: #ccc;
    }

    .form-control {
        background-color: #2c2c2c;
        color: white;
        border: none;
    }

    .form-control:focus {
        background-color: #2c2c2c;
        color: white;
        border: 1px solid #fb8c00;
        box-shadow: none;
    }

    .text-danger {
        color: #ff5252 !important;
    }

    .btn-orange {
        background-color: #fb8c00 !important;
        color: white !important;
    }

    .action-buttons {
        margin-top: 30px;
        display: flex;
        gap: 15px;
    }

    a {
        color: #fb8c00;
    }
    input.select-dropdown{
        color: white;
    }
</style>

<div class="container form-container">
    <h2 class="form-title">Crear Usuario</h2>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label class="control-label">Nombre de Usuario</label>
            <input asp-for="NombreUsuario" class="form-control" />
            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Contraseña</label>
            <input asp-for="Contrasena" class="form-control" />
            <span asp-validation-for="Contrasena" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rol" class="control-label"></label>
            <select asp-for="Rol" class="form-control">
                <option value="">Seleccione un rol</option>
                <option value="Admin">Admin</option>
                <option value="Empleado">Empleado</option>
            </select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Nombre Completo</label>
            <input asp-for="NombreCompleto" class="form-control" />
            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EstaBloqueado" class="control-label">¿Está Bloqueado?</label>
            <select asp-for="EstaBloqueado" class="form-control">
                <option value="false">No</option>
                <option value="true">Sí</option>
            </select>
            <span asp-validation-for="EstaBloqueado" class="text-danger"></span>
        </div>


        <div class="action-buttons">
            <button type="submit" class="btn btn-orange">Crear</button>
            <a asp-action="Index" class="btn btn-outline-light">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
