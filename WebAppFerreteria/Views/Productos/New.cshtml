@model IEnumerable<WebAppFerreteria.Models.Productos>

@{
    ViewData["Title"] = "Lista de Productos";
}

<style>
    body {
        background-color: #1D1D1D;
    }

    .productos-container {
        padding-top: 40px;
    }

    .producto-card {
        background-color: #212121;
        color: white;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        transition: transform 0.3s;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .producto-card:hover {
        transform: translateY(-5px);
    }

    .producto-img {
        height: 200px;
        object-fit: cover;
        width: 100%;
    }

    .producto-content {
        padding: 20px;
        flex-grow: 1;
    }

    .producto-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .producto-desc {
        font-size: 1rem;
        color: #ccc;
        margin-bottom: 10px;
    }

    .producto-precio {
        font-size: 1.2rem;
        font-weight: bold;
        color: #fb8c00;
    }

    .producto-stock {
        font-size: 0.9rem;
        color: #aaa;
        margin-bottom: 10px;
    }

    .card-actions {
        padding: 20px;
        display: flex;
        justify-content: space-between;
    }

    .btn-orange {
        background-color: #fb8c00 !important;
        color: white !important;
    }
</style>

<div class="container productos-container">
    <h3 class="white-text center-align">Lista de Productos</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col s12 m6 l4">
                <div class="card producto-card">
                    <img src="@item.ImagenUrl" alt="Imagen del producto" class="producto-img" onerror="this.src='/images/default.png'" />
                    <div class="producto-content">
                        <div class="producto-title">@item.Nombre</div>
                        <div class="producto-desc">@item.Descripcion</div>
                        <div class="producto-precio">$@item.PrecioUnitario</div>
                        <div class="producto-stock">Stock: @item.Stock</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
