@model IEnumerable<WebAppFerreteria.Models.Productos>

@{
    ViewData["Title"] = "Productos";
}

<style>
    body {
        background-color: #1D1D1D;
        color: white;
    }

    .container-productos {
        margin-top: 60px;
        margin-bottom: 60px;
    }

    h1 {
        font-size: 2.2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-create {
        background-color: #fb8c00;
        color: white;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        display: inline-block;
        font-weight: bold;
    }

    .btn-create:hover {
        background-color: #ef6c00;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #2C2C2C;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 14px;
        text-align: left;
        border-bottom: 1px solid #444;
    }

    th {
        background-color: #333;
        color: #fb8c00;
    }

    tr:hover {
        background-color: #383838;
    }

    img {
        max-height: 80px;
        max-width: 100px;
        border-radius: 6px;
    }

    .action-links a {
        margin-right: 10px;
        color: white;
        text-decoration: none;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .action-links a:hover {
        text-decoration: underline;
    }
</style>

<div class="container container-productos">
    <h1>Productos</h1>

    <p>
        <a asp-action="Create" class="btn-create">
            <i class="material-icons left">add</i> Crear nuevo producto
        </a>
    </p>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio Unitario</th>
                <th>Stock</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrecioUnitario)</td>
                    <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                    <td>
                        <img src="@Url.Content($"~/{item.ImagenUrl}")" alt="@item.Nombre" />
                    </td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.Id">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id">🔍 Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
